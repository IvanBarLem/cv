---
import Section from "@/components/Section.astro";
---

<Section class="section">
  <div class="footer">
    <img class="logo" src="/logo.png" />
  </div>
  <p class="copyright">Copyright &copy; {new Date().getFullYear()}</p>
</Section>

<style>
  .footer {
    display: flex;
    justify-content: center;
    align-items: center;
    border-top: 1px solid #eaeaea;
    padding-top: 4rem;
  }

  .logo {
    height: 5rem;
  }

  .copyright {
    text-align: center;
  }

  @media print {
    .footer {
      display: none;
    }
  }
</style>

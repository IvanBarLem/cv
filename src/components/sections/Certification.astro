---
import Section from "../Section.astro";

import { certificates } from "@cv";
---

<Section title="Certificates">
  <ul>
    {
      certificates.map(({ date, issuer, logo, name, url }) => {
        return (
          <li>
            <article>
              <div class="logo">
                <header>
                  <img
                    src={logo}
                    alt={`Logo of ${issuer}`}
                    width="64"
                    height="64"
                  />
                </header>
              </div>
              <div class="content">
                <header>
                  <h3>
                    <a
                      href={url}
                      target="_blank"
                      title={`Open ${name} certificate`}
                    >
                      {name}
                    </a>
                  </h3>
                  <p>{issuer}</p>
                </header>
                <footer>{date}</footer>
              </div>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 10px;
  }

  .content {
  }

  .logo {
  }

  article {
    gap: 16px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    color: #444;
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  .github-code-link {
    margin-left: 5px;
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>

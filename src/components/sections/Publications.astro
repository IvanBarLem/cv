---
import Section from "../Section.astro";

import { publications } from "@cv";
---

<Section title="Publications">
  <ul>
    {
      publications.map(({ publisher, releaseDate, summary, name, url }) => {
        const startYear = new Date(releaseDate).getFullYear();

        return (
          <li>
            <article>
              <header>
                <a
                  href={url}
                  target="_blank"
                  rel="noopener noreferrer"
                  title={`Open '${name}' publication`}
                >
                  <h3>{name}</h3>
                </a>

                <time>{releaseDate}</time>
              </header>
              <body>
                <h6>{publisher}</h6>
              </body>
              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h6 {
    line-height: 1.5;
    font-weight: 300;
    color: #444;
    font-size: 0.9rem;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
